{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "typeRoots": [
      "./src/@types",
      "./node_modules/@types"
    ],
    "rootDir": "src" ,
    "outDir": "dist",
    "resolveJsonModule": true ,
    "removeComments": false,
    "esModuleInterop": true ,
    "forceConsistentCasingInFileNames": true,
    "strict": true ,
    "skipLibCheck": true,
  },
  "exclude": ["node_modules", "jest.config.ts", "./src/tests"]
}
